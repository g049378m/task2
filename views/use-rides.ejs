<h2>🎢 Use Your Fast-Track Rides</h2>
<p><strong>Date:</strong> <%= ticket.visitDate %></p>

<h3>Used Rides</h3>
<% if (ticket.usedFastTrackRides && ticket.usedFastTrackRides.length > 0) { %>
  <ul>
    <% ticket.usedFastTrackRides.forEach(name => { %>
      <li><%= name %></li>
    <% }) %>
  </ul>
<% } else { %>
  <p>No rides used yet.</p>
<% } %>

<h3>Rides Remaining</h3>
<% if (ticket.fastTrackRides.length === 0) { %>
  <p>No fast-track rides left on this ticket.</p>
<% } else { %>
  <ul>
    <% ticket.fastTrackRides.forEach(ride => { %>
      <li>
        <%= ride.name %>
        <form method="post" action="/tickets/<%= ticket._id %>/use-ride" style="display:inline;">
          <input type="hidden" name="rideName" value="<%= ride.name %>">
          <input type="submit" value="Use">
        </form>
      </li>
    <% }) %>
  </ul>
<% } %>
